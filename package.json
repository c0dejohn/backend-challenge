{
  "name": "backend-challenge",
  "version": "1.0.0",
  "description": "This README would normally document whatever steps are necessary to get your application up and running.",
  "main": "app.js",
  "scripts": {
    "dev": "nodemon app",
    "lint": "eslint .",
    "hook-install": "precommit install",
    "hook-remove": "precommit remove",
    "precommit": "eslint 'src/**/*.js'",
    "start": "NODE_ENV=production && node app",
    "test": "npm run lint && jest  --detectOpenHandles --forceExit",
    "migrate": "sequelize db:migrate",
    "coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://c0dejohn@bitbucket.org/c0dejohn/backend-challenge.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://bitbucket.org/c0dejohn/backend-challenge/issues"
  },
  "homepage": "https://bitbucket.org/c0dejohn/backend-challenge#readme",
  "dependencies": {
    "@hapi/boom": "^9.1.4",
    "axios": "^0.23.0",
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.7.2",
    "nodemailer-express-handlebars": "^5.0.0",
    "nodemon": "^2.0.14",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.7.0",
    "sequelize-cli": "^6.4.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^6.15.0",
    "jest": "^27.5.1",
    "jest-sonar-reporter": "^2.0.0",
    "mocha": "^9.1.3",
    "nodemon": "2.0.6",
    "precommit": "^1.2.2",
    "prettier": "^2.4.1"
  },
  "precommit": {
    "tasks": [
      "npm run precommit"
    ],
    "onDirtyState": "ask",
    "coloredOutput": true
  },
  "engines": {
    "node": "14.x"
  },
  "jest": {
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "jestSonar": {
    "reportPath": "reports",
    "reportFile": "test-reporter.xml",
    "indent": 4
  }
}
